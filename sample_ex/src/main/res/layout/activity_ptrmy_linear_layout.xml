<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.handmark.pulltorefresh.samples.custom.PTRMyLInearLayoutActivity">

    <com.handmark.pulltorefresh.samples.custom.PullToRefreshMyLinearLayout
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_my_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="4dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        ptr:ptrListViewExtrasEnabled="true"
        ptr:ptrShowIndicator="true"
        ptr:ptrDrawable="@drawable/ic_launcher_foreground"
        ptr:ptrHeaderTextColor="#FFA500"
        android:smoothScrollbar="true"/>


</LinearLayout>
